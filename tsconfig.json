{
  "include": [
    "src/**/*"
  ],
  "exclude": ["**/*.test.*", "**/__mocks__/*", "**/__tests__/*"],
  "compilerOptions": {
    "outDir": "./.build",
    "target": "es2020",
    "lib": ["es2020", "dom", "esnext"],
    "moduleResolution": "node",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  }
}
